#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/nos/common.sh

# initialize Nos with the original arguments
nos_init $@

# source common lib
. ${engine_lib_dir}/scala.sh

nos_print_process_start "Installing packages"

# install sun*_java or openjdk*
java_install_runtime

scala_install_runtime

# install sbt
scala_install_sbt

# install node.js for static assets
nodejs_install_runtime

# install bower via npm if Bower.json is found
nodejs_install_bower

# persist all environment variables 
nos_persist_evars

java_create_database_url

# setup cache dirs for sbt
scala_sbt_cache_dir

# sbt_compile
scala_sbt_compile

# run bower install if Bower.json is found
nodejs_bower_install

# set up auto link creation for console'd containers
scala_create_profile_links

# create link to pid file not in read-only code dir
scala_create_pid_file

# persist the current node.js version in the cache
nodejs_set_runtime

exit 0